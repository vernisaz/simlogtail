project  =simtail
main=src${~/~}tail
common =..${~/~}simscript${~/~}comm-build.7b:file
crate_dir=..${~/~}crates
comp opts=[]

version=1.03-dev
set_env(VERSION,version)

test file=${main}
target test :.:Run test {
    dependency {
        target(build test)
    }
    dependency {true}
    assign(test,.${~/~}test${t_ext})
    exec test (-v,-Dhelp=me, -Dno=i'am)
}

include(..${~/~}simscript${~/~}comm-test.7b)
include(common);